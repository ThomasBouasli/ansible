- name: "Install Core System Packages"
  tags: ["core", "install", "neovim"]
  become: true
  changed_when: false
  ansible.builtin.package:
    name:
      - ninja-build
      - gettext
      - cmake
      - unzip
      - curl
      - build-essential
      - git
      - pkg-config
      - libfreetype6-dev
      - libfontconfig1-dev
      - libxcb-xfixes0-dev
      - libxkbcommon-dev
      - python3

- name: "Install Tmux"
  tags: ["core", "install", "tmux"]
  become: true
  changed_when: false
  ansible.builtin.package:
    name:
      - tmux

- name: "Download rust installer"
  tags: ["core", "install", "rust"]
  ansible.builtin.get_url:
    url: https://sh.rustup.rs
    dest: /tmp/rustup.sh
    mode: 'u+x'

- name: "Install Rust"
  tags: ["core", "install", "rust"]
  shell: /tmp/rustup.sh -y
  args:
    creates: ~/.cargo/bin/rustup


- name: "Install Fuzzy Finder"
  tags: ["core", "install", "neovim", "nvchad"]
  become: true
  changed_when: false
  ansible.builtin.package:
    name:
      - fzf
      - ripgrep
